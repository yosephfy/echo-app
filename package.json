{
  "name": "echo-app",
  "private": true,
  "workspaces": [
    "backend",
    "mobile"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "build": "npm --workspace=backend run build",
    "start:prod": "npm --workspace=backend run start:prod",
    "start": "npm --workspace=backend run start"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "packageManager": "npm@11.6.1",
  "devDependencies": {
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "jiti": "1.21.7",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3"
  },
  "dependencies": {},
  "resolutions": {}
}
